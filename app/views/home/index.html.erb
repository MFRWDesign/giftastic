<p id="notice"><%= notice %></p>

<h1>Homepage</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>User Email</th>
      <th>Image</th>
    </tr>
  </thead>

  <tbody>
    <% @gifs.each do |gif| %>
      <tr>
        <td><%= gif.title %></td>
        <td><%= gif.user.email %></td>
        <td>
          <% if gif.image.present? %>
            <%= image_tag url_for(gif.image) %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if @gifs.present? %>
  <%= paginate @gifs %>
<% end %>
